.social-share-icon-svg
    color: $badgeErrorColor

// container styles
.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius $BorderRadius
  background-color $containerBg
  text-align center
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right

@font-face {
    font-family: 'Tangerine';
    // src: url(/fonts/Tangerine-Bold.ttf)
    src: url(/fonts/Tangerine-Regular.ttf)
}

.quote
    margin 1rem 0
    padding .1rem 1.5rem
    border-radius 0.5rem
    background-color #f0f4f8
    border-bottom-style: ridge
    border-bottom-width: 0.5rem
    .body
        font-family: 'Tangerine'
        font-size: 4rem
        text-align center
    .author
        // font-weight bold
        color transparentify($textColor, 0.4)
        text-align right
        font-size 1rem
        font-style italic
    p
        margin 0.1rem

// Latex Styles
mjx-container.MathJax
    font-weight: bold
    padding: $Padding
    border-radius: $BorderRadius
    background: $containerbg
    color: $githubRed

mark
    border-radius: 0.4rem
    padding: 0.1rem 0.4rem 0.2rem 0.4rem
    background: $mark
    color: $textColor


// Style Containers
.custom-block.tip
  border-color $blueL

// code text color
.theme-default-content code
  // color #0b64c7
  color: $codeColor
  font-family: SFMono-Regular,Menlo,Monaco,Consolas,Liberation Mono,Courier New,monospace
  font-size: 1rem

// vue issue
$vssue-theme-color ?= $accentColor
$vssue-text-color ?= $textColor
$vssue-border-color ?= $borderColor
$vssue-breakpoint-mobile ?= $MQMobile

/** ANCHOR
 * code block syntax block styling
 */
div[class*="language-"]::before
    position: absolute;
    z-index: 3;
    top: 1em;
    right: 1em;
    font-size: 1rem;
    color: rgba(255,255,255,0.4);
    padding: 2px 10px;
    color: white;
    border-radius: 2px;
    background: $accentColor;

div.language-js::before
    color: $jsBlack
    background: $jsYellow;

div.language-ts::before
    background: $tsBlue;

/**
 * ANCHOR .theorem
